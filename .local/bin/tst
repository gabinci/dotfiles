#!/bin/zsh

# script for random fetch
# $HOME/dotfiles/.config/zsh/after/visual/random

(
	cd $HOME/dotfiles/.config/zsh/after/visual/
	choice=$(fd -tf | fzf | sed "s|~|$HOME|")
	sed -i.backup -r "/#fetch$/s,(~/dotfiles/.config/zsh/after/visual/)[^ ]*,\1${choice},g" $HOME/dotfiles/.config/zsh/.zshrc
  echo "You choose \"$(basename $choice)\", you can now restart $(basename $SHELL)"
)

exit 0
